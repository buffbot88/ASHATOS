@page "/cms/blogs/create"
@model LegendaryCMS.Pages.Blogs.CreateModel
@{
    ViewData["Title"] = Model.IsEdit ? "Edit Blog Post" : "Create New Blog Post";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tiny.cloud/1/gts3xwtrz4w4gsanp8ht0fb7djz2bqdrsjj3xizbwjtq3lxu/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a0033 50%, #2d004d 100%);
            min-height: 100vh;
            color: #e0d0ff;
        }
        .header {
            background: rgba(20, 0, 40, 0.9);
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(138, 43, 226, 0.3);
        }
        .header h1 {
            background: linear-gradient(to right, #ffffff, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 3em;
            margin-bottom: 10px;
        }
        .nav {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }
        .nav a {
            color: #c084fc;
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 600;
        }
        .nav a:hover {
            background: rgba(138, 43, 226, 0.4);
            transform: translateY(-2px);
        }
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }
        .editor-card {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 8px 32px rgba(138, 43, 226, 0.4);
        }
        .editor-card h2 {
            color: #c084fc;
            font-size: 2em;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-group label {
            display: block;
            color: #c084fc;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 1.1em;
        }
        .form-group input[type="text"],
        .form-group select {
            width: 100%;
            padding: 12px;
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            color: #e0d0ff;
            font-size: 1em;
            font-family: inherit;
        }
        .form-group input[type="text"]:focus,
        .form-group select:focus {
            outline: none;
            border-color: rgba(138, 43, 226, 0.7);
            background: rgba(138, 43, 226, 0.15);
        }
        .form-group textarea {
            width: 100%;
            min-height: 500px;
            padding: 15px;
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            color: #e0d0ff;
            font-size: 1em;
            font-family: inherit;
            resize: vertical;
        }
        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
        }
        .btn {
            padding: 12px 30px;
            background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%);
            color: white;
            border: 2px solid rgba(138, 43, 226, 0.5);
            border-radius: 8px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }
        .btn:hover {
            background: linear-gradient(135deg, #a13dd6 0%, #7d22ab 100%);
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.6);
        }
        .btn-secondary {
            background: rgba(138, 43, 226, 0.2);
            color: #c084fc;
        }
        .btn-secondary:hover {
            background: rgba(138, 43, 226, 0.4);
        }
        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .alert-error {
            background: rgba(220, 38, 38, 0.2);
            border: 1px solid rgba(220, 38, 38, 0.4);
            color: #fca5a5;
        }
        .alert-success {
            background: rgba(34, 197, 94, 0.2);
            border: 1px solid rgba(34, 197, 94, 0.4);
            color: #86efac;
        }
        .footer {
            background: rgba(20, 0, 40, 0.9);
            border-top: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
            margin-top: 60px;
        }
        .footer p {
            color: #b8a8d8;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üìù @(Model.IsEdit ? "Edit" : "Create") Blog Post</h1>
        <div class="nav">
            <a href="/">Home</a>
            <a href="/cms/blogs">Blogs</a>
            <a href="/cms/forums">Forums</a>
            <a href="/control-panel">Control Panel</a>
        </div>
    </div>

    <div class="container">
        <div class="editor-card">
            <h2>@(Model.IsEdit ? "Edit Your Blog Post" : "Write Your Blog Post")</h2>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-error">
                    @Model.ErrorMessage
                </div>
            }
            
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">
                    @Model.SuccessMessage
                </div>
            }
            
            <form method="post">
                <div class="form-group">
                    <label for="title">Post Title *</label>
                    <input type="text" id="title" name="title" value="@Model.Title" required 
                           placeholder="Enter an engaging title for your blog post...">
                </div>
                
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category">
                        <option value="">-- Select Category --</option>
                        <option value="General">General</option>
                        <option value="Technology">Technology</option>
                        <option value="Development">Development</option>
                        <option value="Gaming">Gaming</option>
                        <option value="Tutorials">Tutorials</option>
                        <option value="News">News</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="PostContent">Content *</label>
                    <textarea id="PostContent" name="PostContent" required>@Model.PostContent</textarea>
                </div>
                
                <div class="button-group">
                    <button type="submit" class="btn">
                        @(Model.IsEdit ? "Update Post" : "Publish Post")
                    </button>
                    <button type="submit" name="action" value="draft" class="btn btn-secondary">
                        Save as Draft
                    </button>
                    <a href="/cms/blogs" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <div class="footer">
        <p>AGP Studios, INC - ASHAT Os Blog Editor ‚Ä¢ Powered by LegendaryCMS</p>
    </div>

    <script>
        // Initialize TinyMCE only if loaded
        if (typeof tinymce !== 'undefined') {
            tinymce.init({
                selector: '#PostContent',
                height: 500,
                menubar: true,
                plugins: [
                    'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                    'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                    'insertdatetime', 'media', 'table', 'help', 'wordcount'
                ],
                toolbar: 'undo redo | blocks | ' +
                    'bold italic forecolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat | help',
                content_style: 'body { font-family:Helvetica,Arial,sans-serif; font-size:14px }',
                skin: 'oxide-dark',
                content_css: 'dark'
            });
        }

        // Ensure TinyMCE content is synced to textarea before form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            if (typeof tinymce !== 'undefined') {
                tinymce.triggerSave();
            }
        });
    </script>
    <!-- ASHAT Os Session Manager -->
    <script src="/js/session-manager.js"></script>
</body>
</html>
