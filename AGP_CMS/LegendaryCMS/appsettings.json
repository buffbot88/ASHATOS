{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "AGP_CMS": {
    "SiteName": "AGP CMS",
    "SiteUrl": "http://localhost:5000",
    "Database": {
      "Type": "SQLite",
      "ConnectionString": "Data Source=agp_cms.db",
      "AutoMigrate": true
    },
    "Security": {
      "SessionTimeout": 3600,
      "EnableCSRF": true,
      "EnableXSSProtection": true,
      "MaxLoginAttempts": 5
    },
    "API": {
      "Enabled": true,
      "RateLimit": {
        "RequestsPerMinute": 60,
        "RequestsPerHour": 1000
      }
    },
    "Features": {
      "Blogs": true,
      "Forums": true,
      "Learning": true,
      "Profiles": true,
      "Downloads": true,
      "AdminPanel": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
