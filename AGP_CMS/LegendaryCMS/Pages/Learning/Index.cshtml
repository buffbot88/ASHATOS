@page "/cms/learning"
@model LegendaryCMS.Pages.Learning.IndexModel
@{
    ViewData["Title"] = "Learning Module - Browse Courses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a0033 50%, #2d004d 100%);
            min-height: 100vh;
            color: #e0d0ff;
        }
        .header {
            background: rgba(20, 0, 40, 0.9);
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(138, 43, 226, 0.3);
        }
        .header h1 {
            background: linear-gradient(to right, #ffffff, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 3em;
            margin-bottom: 10px;
        }
        .nav {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }
        .nav a {
            color: #c084fc;
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 600;
        }
        .nav a:hover {
            background: rgba(138, 43, 226, 0.4);
            transform: translateY(-2px);
        }
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }
        .welcome-section {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(138, 43, 226, 0.4);
        }
        .welcome-section h2 {
            color: #c084fc;
            margin-bottom: 15px;
        }
        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }
        .course-card {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            padding: 25px;
            transition: all 0.3s;
            cursor: pointer;
        }
        .course-card:hover {
            border-color: rgba(138, 43, 226, 0.6);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(138, 43, 226, 0.4);
        }
        .course-card h3 {
            color: #c084fc;
            margin-bottom: 10px;
            font-size: 1.4em;
        }
        .course-card p {
            color: #c8b6ff;
            margin-bottom: 15px;
            line-height: 1.6;
        }
        .course-meta {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-top: 15px;
        }
        .course-meta span {
            background: rgba(138, 43, 226, 0.2);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.9em;
            color: #c8b6ff;
        }
        .btn-primary {
            background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%);
            border: 2px solid rgba(138, 43, 226, 0.5);
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            margin-top: 15px;
            transition: all 0.3s;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #a13dd6 0%, #7d22ab 100%);
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.6);
            transform: translateY(-2px);
        }
        .loading {
            text-align: center;
            padding: 40px;
            color: #c8b6ff;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üìö Learning Module</h1>
        <p>Legendary User Learning - Master ASHATOS</p>
        <div class="nav">
            <a href="/">üè† Home</a>
            <a href="/cms/learning">üìñ Courses</a>
            <a href="/cms/learning/progress">üìä My Progress</a>
            <a href="/cms/learning/achievements">üèÜ Achievements</a>
            <a href="/control-panel">‚öôÔ∏è Control Panel</a>
        </div>
    </div>

    <div class="container">
        <div class="welcome-section">
            <h2>üéì Welcome to the Learning Module</h2>
            <p>
                The Legendary User Learning Module (LULModule) is your comprehensive guide to mastering ASHATOS. 
                Whether you're a beginner or an advanced user, we have courses tailored to your skill level.
            </p>
            <p style="margin-top: 15px;">
                Complete courses to earn RaCoins, unlock achievements, and build your expertise in the ASHATOS ecosystem.
            </p>
        </div>

        <h2 style="color: #c084fc; margin-bottom: 20px;">üìö Available Courses</h2>
        <div id="courses-container" class="courses-grid">
            <div class="loading">Loading courses...</div>
        </div>
    </div>

    <script>
        async function loadCourses() {
            try {
                const token = localStorage.getItem('ASHATCore_token');
                const response = await fetch('/api/learning/courses/User', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                const data = await response.json();
                
                const container = document.getElementById('courses-container');
                
                if (data.success && data.courses && data.courses.length > 0) {
                    container.innerHTML = data.courses.map(course => `
                        <div class="course-card">
                            <h3>${course.title || 'Course'}</h3>
                            <p>${course.description || 'Learn about ASHATOS'}</p>
                            <div class="course-meta">
                                <span>üìù ${course.lessonCount || 0} Lessons</span>
                                <span>‚è±Ô∏è ${course.duration || 'Self-paced'}</span>
                            </div>
                            <p style="margin-top: 15px; color: #c8b6ff; font-size: 0.9em;">Course details coming soon</p>
                        </div>
                    `).join('');
                } else {
                    container.innerHTML = `
                        <div class="welcome-section">
                            <h3>No courses available yet</h3>
                            <p>Check back soon for new learning content!</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading courses:', error);
                document.getElementById('courses-container').innerHTML = `
                    <div class="welcome-section">
                        <h3>‚ö†Ô∏è Error loading courses</h3>
                        <p>Please try again later or contact support.</p>
                    </div>
                `;
            }
        }

        // Load courses on page load
        loadCourses();
    </script>
    <!-- ASHAT Os Session Manager -->
    <script src="/js/session-manager.js"></script>
</body>
</html>
