@* Blazor Component for Blog Post Card - Pure .NET alternative to PHP templates *@

<article class="blog-post-card @CssClass">
    <h3><a href="/cms/blogs/post/@PostId">@Title</a></h3>
    
    <div class="post-meta">
        <div class="author-info">
            <span class="author-avatar">ðŸ‘¤</span>
            <a href="/cms/profiles/@AuthorId" class="author-link">@Author</a>
            @if (!string.IsNullOrEmpty(AuthorRole))
            {
                <span class="author-role">@AuthorRole</span>
            }
        </div>
        <span class="date">@PublishedDate.ToString("MMM dd, yyyy")</span>
        @if (!string.IsNullOrEmpty(Category))
        {
            <span class="category">@Category</span>
        }
    </div>
    
    <div class="excerpt">
        <p>@Excerpt</p>
    </div>
    
    <div class="post-footer">
        <span class="views">@ViewCount views</span>
        <span class="comments">@CommentCount comments</span>
    </div>
</article>

<style>
    .blog-post-card {
        background: rgba(20, 0, 40, 0.9);
        border: 2px solid rgba(138, 43, 226, 0.3);
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
        transition: all 0.3s;
    }
    .blog-post-card:hover {
        border-color: rgba(138, 43, 226, 0.6);
        box-shadow: 0 4px 15px rgba(138, 43, 226, 0.4);
    }
    .blog-post-card h3 {
        margin-bottom: 15px;
    }
    .blog-post-card h3 a {
        color: #c084fc;
        text-decoration: none;
    }
    .blog-post-card h3 a:hover {
        color: #d8a8ff;
    }
    .post-meta {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 15px;
        align-items: center;
        font-size: 0.9em;
        color: #b8a8d8;
    }
    .author-info {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .author-avatar {
        width: 30px;
        height: 30px;
        background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1em;
    }
    .author-link {
        color: #c084fc;
        text-decoration: none;
        font-weight: bold;
    }
    .author-link:hover {
        color: #d8a8ff;
    }
    .author-role {
        padding: 2px 6px;
        background: rgba(138, 43, 226, 0.3);
        border-radius: 4px;
        font-size: 0.85em;
        color: #d8c8ff;
    }
    .excerpt {
        color: #d8c8ff;
        margin-bottom: 15px;
        line-height: 1.6;
    }
    .post-footer {
        display: flex;
        gap: 15px;
        color: #b8a8d8;
        font-size: 0.85em;
    }
</style>

@code {
    [Parameter]
    public int PostId { get; set; }
    
    [Parameter]
    public string Title { get; set; } = string.Empty;
    
    [Parameter]
    public string Author { get; set; } = string.Empty;
    
    [Parameter]
    public string AuthorId { get; set; } = string.Empty;
    
    [Parameter]
    public string AuthorRole { get; set; } = string.Empty;
    
    [Parameter]
    public DateTime PublishedDate { get; set; }
    
    [Parameter]
    public string Excerpt { get; set; } = string.Empty;
    
    [Parameter]
    public string? Category { get; set; }
    
    [Parameter]
    public int ViewCount { get; set; }
    
    [Parameter]
    public int CommentCount { get; set; }
    
    [Parameter]
    public string CssClass { get; set; } = string.Empty;
}
