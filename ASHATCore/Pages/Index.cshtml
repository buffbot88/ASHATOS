        }
        .content-section {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.3);
        }
        .content-section h2 {
            color: #c084fc;
            font-size: 1.8em;
            margin-bottom: 20px;
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
