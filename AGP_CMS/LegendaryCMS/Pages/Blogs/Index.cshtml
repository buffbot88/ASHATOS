@page "/cms/blogs"
@model LegendaryCMS.Pages.Blogs.IndexModel
@{
    ViewData["Title"] = "Blog - Latest Posts";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a0033 50%, #2d004d 100%);
            min-height: 100vh;
            color: #e0d0ff;
        }
        .header {
            background: rgba(20, 0, 40, 0.9);
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(138, 43, 226, 0.3);
        }
        .header h1 {
            background: linear-gradient(to right, #ffffff, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 3em;
            margin-bottom: 10px;
        }
        .nav {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }
        .nav a {
            color: #c084fc;
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 600;
        }
        .nav a:hover {
            background: rgba(138, 43, 226, 0.4);
            transform: translateY(-2px);
        }
        .container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 0 20px;
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 40px;
        }
        .main-content {
            min-width: 0;
        }
        .blog-header {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(138, 43, 226, 0.4);
        }
        .blog-header h2 {
            color: #c084fc;
            font-size: 2.2em;
            margin-bottom: 10px;
        }
        .blog-header p {
            color: #d8c8ff;
            font-size: 1.1em;
        }
        .blog-post {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.3);
            transition: all 0.3s;
        }
        .blog-post:hover {
            border-color: rgba(138, 43, 226, 0.6);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(138, 43, 226, 0.5);
        }
        .blog-post h2 {
            color: #c084fc;
            font-size: 1.8em;
            margin-bottom: 15px;
        }
        .blog-post h2 a {
            color: #c084fc;
            text-decoration: none;
            transition: color 0.3s;
        }
        .blog-post h2 a:hover {
            color: #e0d0ff;
        }
        .post-meta {
            display: flex;
            gap: 20px;
            color: #b8a8d8;
            font-size: 0.9em;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        .post-meta span {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .post-meta span::before {
            content: "‚Ä¢";
            color: #8b2fc7;
        }
        .post-meta span:first-child::before {
            content: "üë§";
        }
        .post-excerpt {
            color: #d8c8ff;
            line-height: 1.8;
            margin-bottom: 20px;
            font-size: 1.05em;
        }
        .read-more {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 600;
            border: 2px solid rgba(138, 43, 226, 0.5);
        }
        .read-more:hover {
            background: linear-gradient(135deg, #a13dd6 0%, #7d22ab 100%);
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.6);
        }
        .sidebar {
            min-width: 0;
        }
        .sidebar-widget {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.3);
        }
        .sidebar-widget h3 {
            color: #c084fc;
            font-size: 1.4em;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
        }
        .search-box {
            width: 100%;
            padding: 12px;
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            color: #e0d0ff;
            font-size: 1em;
        }
        .search-box::placeholder {
            color: #b8a8d8;
        }
        .category-list, .recent-posts-list {
            list-style: none;
        }
        .category-list li, .recent-posts-list li {
            padding: 10px 0;
            border-bottom: 1px solid rgba(138, 43, 226, 0.2);
        }
        .category-list li:last-child, .recent-posts-list li:last-child {
            border-bottom: none;
        }
        .category-list a, .recent-posts-list a {
            color: #d8c8ff;
            text-decoration: none;
            transition: color 0.3s;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .category-list a:hover, .recent-posts-list a:hover {
            color: #c084fc;
        }
        .category-count {
            background: rgba(138, 43, 226, 0.3);
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.85em;
        }
        .recent-post-date {
            color: #b8a8d8;
            font-size: 0.85em;
            margin-top: 5px;
        }
        .footer {
            background: rgba(20, 0, 40, 0.9);
            border-top: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
            margin-top: 60px;
        }
        .footer p {
            color: #b8a8d8;
        }
        @@media (max-width: 968px) {
            .container {
                grid-template-columns: 1fr;
            }
            .sidebar {
                order: -1;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üìù ASHAT Os Blog</h1>
        <div class="nav">
            <a href="/">Home</a>
            <a href="/cms/blogs">Blogs</a>
            <a href="/cms/forums">Forums</a>
            <a href="/cms/profiles">Profiles</a>
            <a href="/control-panel">Control Panel</a>
        </div>
    </div>

    <div class="container">
        <div class="main-content">
            <div class="blog-header">
                <h2>Latest Posts</h2>
                <p>Discover insights, tutorials, and updates from our community</p>
                <div style="margin-top: 15px;">
                    <a href="/cms/blogs/create" style="padding: 10px 20px; background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; display: inline-block;">‚úçÔ∏è Create New Post</a>
                </div>
            </div>

            @foreach (var post in Model.RecentPosts)
            {
                <article class="blog-post">
                    <h2><a asp-page="./Post" asp-route-id="@post.Id">@post.Title</a></h2>
                    <div class="post-meta">
                        <span>@post.Author</span>
                        <span>@post.PublishedDate.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="post-excerpt">
                        <p>@post.Excerpt</p>
                    </div>
                    <a asp-page="./Post" asp-route-id="@post.Id" class="read-more">Read More ‚Üí</a>
                </article>
            }
        </div>

        <aside class="sidebar">
            <div class="sidebar-widget">
                <h3>üîç Search</h3>
                <input type="text" class="search-box" placeholder="Search blog posts...">
            </div>

            <div class="sidebar-widget">
                <h3>üìÇ Categories</h3>
                <ul class="category-list">
                    <li><a href="#">Announcements <span class="category-count">5</span></a></li>
                    <li><a href="#">Tutorials <span class="category-count">12</span></a></li>
                    <li><a href="#">Development <span class="category-count">8</span></a></li>
                    <li><a href="#">Community <span class="category-count">15</span></a></li>
                    <li><a href="#">Updates <span class="category-count">6</span></a></li>
                </ul>
            </div>

            <div class="sidebar-widget">
                <h3>üìå Recent Posts</h3>
                <ul class="recent-posts-list">
                    @foreach (var post in Model.RecentPosts.Take(5))
                    {
                        <li>
                            <a asp-page="./Post" asp-route-id="@post.Id">
                                @post.Title
                            </a>
                            <div class="recent-post-date">@post.PublishedDate.ToString("MMM dd, yyyy")</div>
                        </li>
                    }
                </ul>
            </div>

            <div class="sidebar-widget">
                <h3>üè∑Ô∏è Tags</h3>
                <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-top: 15px;">
                    <a href="#" style="background: rgba(138, 43, 226, 0.2); color: #c084fc; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 0.9em; border: 1px solid rgba(138, 43, 226, 0.3);">.NET</a>
                    <a href="#" style="background: rgba(138, 43, 226, 0.2); color: #c084fc; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 0.9em; border: 1px solid rgba(138, 43, 226, 0.3);">CMS</a>
                    <a href="#" style="background: rgba(138, 43, 226, 0.2); color: #c084fc; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 0.9em; border: 1px solid rgba(138, 43, 226, 0.3);">Blazor</a>
                    <a href="#" style="background: rgba(138, 43, 226, 0.2); color: #c084fc; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 0.9em; border: 1px solid rgba(138, 43, 226, 0.3);">Tutorial</a>
                    <a href="#" style="background: rgba(138, 43, 226, 0.2); color: #c084fc; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 0.9em; border: 1px solid rgba(138, 43, 226, 0.3);">API</a>
                </div>
            </div>
        </aside>
    </div>

    <div class="footer">
        <p>AGP Studios, INC - ASHAT Os Blog ‚Ä¢ Powered by LegendaryCMS</p>
    </div>
    <!-- ASHAT Os Session Manager -->
    <script src="/js/session-manager.js"></script>
</body>
</html>
