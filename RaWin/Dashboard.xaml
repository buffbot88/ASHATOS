<Page x:Class="RaWin.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:RaWin"
      Title="Dashboard">

    <Page.Resources>
        <local:MessageTypeToBrushConverter x:Key="MessageTypeToBrushConverter"/>
    </Page.Resources>

    <Grid>
        <!-- Notification/alert bar at top -->
        <Border Height="100"
                Background="Black"
                CornerRadius="8"
                Margin="0,0,0,12"
                Padding="16"
                VerticalAlignment="Top">
            <TextBlock Text="{Binding DashboardMessage}"
                       FontSize="20"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="{Binding DashboardMessageType, Converter={StaticResource MessageTypeToBrushConverter}}"/>
        </Border>

        <!-- Dashboard main content below (add as needed) -->
        <StackPanel Margin="0,112,0,0">
            <!-- Example content: -->
            <TextBlock Text="Dashboard Main Content Here" FontSize="24" Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
