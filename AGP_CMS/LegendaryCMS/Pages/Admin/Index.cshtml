@page "/cms/admin"
@model LegendaryCMS.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .admin-container {
        max-width: 1400px;
        margin: 20px auto;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }
    
    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .admin-header h1 {
        margin: 0 0 10px 0;
        font-size: 2em;
    }
    
    .admin-nav {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }
    
    .admin-nav a {
        background: white;
        color: #667eea;
        padding: 12px 24px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        border: 2px solid #667eea;
        transition: all 0.3s;
    }
    
    .admin-nav a:hover {
        background: #667eea;
        color: white;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-left: 4px solid #667eea;
    }
    
    .stat-card h3 {
        margin: 0 0 10px 0;
        color: #666;
        font-size: 0.9em;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .stat-value {
        font-size: 2.5em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }
    
    .stat-change {
        color: #22c55e;
        font-size: 0.9em;
    }
    
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
    }
    
    .panel {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .panel h2 {
        margin: 0 0 20px 0;
        color: #333;
        border-bottom: 2px solid #667eea;
        padding-bottom: 10px;
    }
    
    .activity-item {
        padding: 15px;
        border-bottom: 1px solid #eee;
    }
    
    .activity-item:last-child {
        border-bottom: none;
    }
    
    .activity-type {
        display: inline-block;
        background: #667eea;
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 0.8em;
        margin-right: 10px;
    }
    
    .health-indicator {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 6px;
        background: #f0fdf4;
    }
    
    .health-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #22c55e;
    }
    
    .storage-bar {
        height: 20px;
        background: #e5e7eb;
        border-radius: 10px;
        overflow: hidden;
        margin-top: 10px;
    }
    
    .storage-fill {
        height: 100%;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transition: width 0.3s;
    }
    
    @@media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="admin-container">
    <div class="admin-header">
        <h1>üéõÔ∏è Admin Control Panel</h1>
        <p>Welcome to the LegendaryCMS administration dashboard. Manage all aspects of your site from here.</p>
    </div>
    
    <div class="admin-nav">
        <a href="/cms/admin">üìä Dashboard</a>
        <a href="/cms/admin/users">üë• Users</a>
        <a href="/cms/admin/forums">üí¨ Forums</a>
        <a href="/cms/admin/blogs">üìù Blogs</a>
        <a href="/cms/admin/downloads">üì• Downloads</a>
        <a href="/cms/admin/categories">üìÅ Categories</a>
        <a href="/cms/admin/permissions">üîê Permissions</a>
        <a href="/cms/admin/settings">‚öôÔ∏è Settings</a>
    </div>
    
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Users</h3>
            <div class="stat-value">@Model.Stats.TotalUsers</div>
            <div class="stat-change">+@Model.Stats.NewUsersThisWeek this week</div>
        </div>
        
        <div class="stat-card">
            <h3>Forum Posts</h3>
            <div class="stat-value">@Model.Stats.TotalForumPosts</div>
            <div class="stat-change">+@Model.Stats.PostsThisWeek this week</div>
        </div>
        
        <div class="stat-card">
            <h3>Blog Posts</h3>
            <div class="stat-value">@Model.Stats.TotalBlogPosts</div>
            <div class="stat-change">Active content</div>
        </div>
        
        <div class="stat-card">
            <h3>Downloads</h3>
            <div class="stat-value">@Model.Stats.TotalDownloads</div>
            <div class="stat-change">+@Model.Stats.DownloadsThisWeek this week</div>
        </div>
    </div>
    
    <div class="content-grid">
        <div class="panel">
            <h2>üìã Recent Activity</h2>
            @if (Model.RecentActivities.Any())
            {
                foreach (var activity in Model.RecentActivities.Take(10))
                {
                    <div class="activity-item">
                        <span class="activity-type">@activity.ActivityType</span>
                        <strong>@activity.UserName</strong> @activity.Description
                        <div style="color: #999; font-size: 0.9em; margin-top: 5px;">
                            @activity.Timestamp.ToString("MMM dd, yyyy HH:mm")
                        </div>
                    </div>
                }
            }
            else
            {
                <p style="color: #999; text-align: center; padding: 40px;">
                    No recent activity. The system is ready to track user actions.
                </p>
            }
        </div>
        
        <div>
            <div class="panel" style="margin-bottom: 20px;">
                <h2>üè• System Health</h2>
                <div class="health-indicator">
                    <div class="health-dot"></div>
                    <div>
                        <strong>Overall Status</strong><br/>
                        <span style="color: #22c55e;">@Model.Health.Status</span>
                    </div>
                </div>
                
                <div class="health-indicator">
                    <div class="health-dot"></div>
                    <div>
                        <strong>Database</strong><br/>
                        <span style="color: #22c55e;">@Model.Health.DatabaseStatus</span>
                    </div>
                </div>
                
                <div class="health-indicator">
                    <div class="health-dot"></div>
                    <div>
                        <strong>API</strong><br/>
                        <span style="color: #22c55e;">@Model.Health.ApiStatus</span>
                    </div>
                </div>
                
                <div style="margin-top: 20px;">
                    <strong>Storage</strong>
                    <div class="storage-bar">
                        @{
                            var storagePercent = Model.Health.StorageTotal > 0 
                                ? (int)((Model.Health.StorageUsed * 100) / Model.Health.StorageTotal) 
                                : 0;
                        }
                        <div class="storage-fill" style="width: @(storagePercent)%"></div>
                    </div>
                    <div style="margin-top: 5px; font-size: 0.9em; color: #666;">
                        @Model.Health.StorageUsed MB / @Model.Health.StorageTotal GB used
                    </div>
                </div>
                
                @if (Model.Health.LastBackup.HasValue)
                {
                    <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #eee;">
                        <strong>Last Backup:</strong><br/>
                        <span style="color: #666;">@Model.Health.LastBackup.Value.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                }
            </div>
            
            <div class="panel">
                <h2>‚ö° Quick Actions</h2>
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <a href="/cms/admin/users/create" style="display: block; padding: 12px; background: #f3f4f6; border-radius: 6px; text-decoration: none; color: #333; font-weight: 600;">
                        ‚ûï Add New User
                    </a>
                    <a href="/cms/admin/forums/create" style="display: block; padding: 12px; background: #f3f4f6; border-radius: 6px; text-decoration: none; color: #333; font-weight: 600;">
                        üí¨ Create Forum Category
                    </a>
                    <a href="/cms/admin/blogs/create" style="display: block; padding: 12px; background: #f3f4f6; border-radius: 6px; text-decoration: none; color: #333; font-weight: 600;">
                        üìù Create Blog Post
                    </a>
                    <a href="/cms/admin/downloads/upload" style="display: block; padding: 12px; background: #f3f4f6; border-radius: 6px; text-decoration: none; color: #333; font-weight: 600;">
                        üì§ Upload File
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
