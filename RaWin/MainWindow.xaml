<Window x:Class="RaWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RaWin" Height="800" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="Modules">
                <TabControl ItemsSource="{Binding CoreModules}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Module.Name}" FontWeight="Bold"/>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <ScrollViewer>
                                <StackPanel Margin="16">
                                    <TextBlock Text="{Binding Module.Name}" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text="Status:" FontWeight="Bold" Margin="0,8,0,2"/>
                                    <TextBlock Text="{Binding Status}" FontSize="14"/>
                                    <TextBlock Text="Help:" FontWeight="Bold" Margin="0,8,0,2"/>
                                    <TextBlock Text="{Binding Help}" FontSize="13" TextWrapping="Wrap"/>
                                    <TextBlock Text="Logs:" FontWeight="Bold" Margin="0,8,0,2"/>
                                    <ItemsControl ItemsSource="{Binding Logs}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="12" Foreground="Gray"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock Text="Command:" FontWeight="Bold" Margin="0,12,0,2"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Width="400"
                                                 Text="{Binding CommandInput, UpdateSourceTrigger=PropertyChanged}"
                                                 KeyDown="TextBox_KeyDown"/>
                                        <Button Content="Run"
                                                Command="{Binding RunCommand}"
                                                Margin="8,0,0,0"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding CommandResult}" Margin="0,12,0,0" TextWrapping="Wrap" FontSize="14" Foreground="DarkGreen"/>
                                </StackPanel>
                            </ScrollViewer>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
