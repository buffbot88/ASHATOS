<Window
    x:Class="Ra.UI.Win.Presentation.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Ra.UI.Win.ViewModels"
    Title="Ra Headless Host"
    Height="600" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top menu bar -->
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Modules">
                <ItemsControl ItemsSource="{Binding Modules}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <MenuItem Header="{Binding Name}"
                                      Command="{Binding DataContext.SelectModuleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </MenuItem>
        </Menu>

        <!-- Left docked properties panel -->
        <Border Grid.Row="1" Grid.Column="0" Background="#222" Padding="12" CornerRadius="8" Margin="8">
            <ContentControl Content="{Binding SelectedModule}">
                <ContentControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type vm:ModuleViewModel}">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="18" Text="{Binding Name}"/>
                            <TextBlock FontSize="14" Foreground="#ccc" Text="{Binding Type}"/>
                            <!-- Add more controls for commands/properties as needed -->
                            <TextBlock Margin="0,12,0,0" Text="Module properties and commands will be shown here."/>
                        </StackPanel>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Border>

        <!-- Main console area -->
        <Border Grid.Row="1" Grid.Column="1" Background="#111" Padding="16" CornerRadius="8" Margin="8">
            <StackPanel>
                <TextBlock FontSize="20" FontWeight="Bold" Foreground="#0cf">Console Output</TextBlock>
                <!-- Replace with your actual log output component -->
                <TextBlock Text="Hello world"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
