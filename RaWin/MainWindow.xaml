<Window x:Class="RaWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RaWin" Height="700" Width="1100">
    <Grid>
        <TabControl>
            <TabItem Header="Dashboard">
                <Grid>
                    <TextBlock Text="Welcome to the Dashboard!" FontSize="24"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Modules">
                <Grid>
                    <!-- TabControl for Core Modules only -->
                    <TabControl ItemsSource="{Binding CoreModules}" Margin="12">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Margin="16">
                                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
                                    <!-- Add more properties as needed -->
                                    <TextBlock Text="Enabled:" FontWeight="Bold" Margin="0,8,0,2"/>
                                    <TextBlock Text="{Binding Enabled}" FontSize="14"/>
                                    <TextBlock Text="Timeout (ms):" FontWeight="Bold" Margin="0,8,0,2"/>
                                    <TextBlock Text="{Binding TimeoutMs}" FontSize="14"/>
                                    <TextBlock Text="Logs:" FontWeight="Bold" Margin="0,8,0,2"/>
                                    <ItemsControl ItemsSource="{Binding Logs}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="12" Foreground="Gray"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <!-- Add more property panels as required -->
                                </StackPanel>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
