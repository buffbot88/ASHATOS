<Window x:Class="RaWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RaWin"
        Title="RaWin" Height="600" Width="1200">
    <Window.Resources>
        <local:MessageTypeToBrushConverter x:Key="MessageTypeToBrushConverter"/>
        <!-- Converter for bool-to-visibility for panel switching -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <TabControl>
            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard">
                <!-- ... unchanged ... -->
            </TabItem>

            <!-- Modules Tab -->
            <TabItem Header="Modules">
                <!-- ... unchanged ... -->
            </TabItem>

            <!-- Monitoring Tab -->
            <TabItem Header="Monitoring">
                <TabControl ItemsSource="{Binding MonitorCategories}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <ScrollViewer>
                                <StackPanel Margin="16">
                                    <!-- Status Panel -->
                                    <StackPanel DataContext="{Binding StatusPanel}" Visibility="{Binding IsStatusPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="RaCore Status" FontSize="20" FontWeight="Bold"/>
                                        <TextBox Text="{Binding Status}" FontSize="14" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                        <TextBlock Text="Uptime:" FontWeight="Bold" Margin="0,8,0,2"/>
                                        <TextBox Text="{Binding Uptime}" FontSize="13" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                    </StackPanel>
                                    <!-- Metrics Panel (unchanged) -->
                                    <StackPanel DataContext="{Binding MetricsPanel}" Visibility="{Binding IsMetricsPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <!-- ... unchanged ... -->
                                    </StackPanel>
                                    <!-- Logs Panel (ERROR/INFO) -->
                                    <StackPanel DataContext="{Binding LogsPanel}" Visibility="{Binding IsLogsPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Error/Info Logs" FontSize="20" FontWeight="Bold" Margin="0,16,0,4"/>
                                        <TextBox Text="{Binding LogSearchInput, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="0,0,0,8" 
                                                 ToolTip="Filter logs by keyword"/>
                                        <ItemsControl ItemsSource="{Binding FilteredLogs}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding}" FontSize="12"
                                                             Foreground="{Binding Converter={StaticResource MessageTypeToBrushConverter}}"
                                                             IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                    <!-- Commands Panel (unchanged) -->
                                    <StackPanel DataContext="{Binding CommandsPanel}" Visibility="{Binding IsCommandsPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <!-- ... unchanged ... -->
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
