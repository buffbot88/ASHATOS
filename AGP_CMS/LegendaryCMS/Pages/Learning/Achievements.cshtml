@page "/cms/learning/achievements"
@model LegendaryCMS.Pages.Learning.AchievementsModel
@{
    ViewData["Title"] = "Learning Module - Achievements";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a0033 50%, #2d004d 100%);
            min-height: 100vh;
            color: #e0d0ff;
        }
        .header {
            background: rgba(20, 0, 40, 0.9);
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
            padding: 30px 20px;
            text-align: center;
        }
        .header h1 {
            background: linear-gradient(to right, #ffffff, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 3em;
        }
        .nav {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }
        .nav a {
            color: #c084fc;
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 8px;
            transition: all 0.3s;
        }
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }
        .achievements-card {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
        }
        .achievements-card h2 {
            color: #c084fc;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üèÜ Achievements</h1>
        <div class="nav">
            <a href="/">üè† Home</a>
            <a href="/cms/learning">üìñ Courses</a>
            <a href="/cms/learning/progress">üìä My Progress</a>
            <a href="/cms/learning/achievements">üèÜ Achievements</a>
            <a href="/control-panel">‚öôÔ∏è Control Panel</a>
        </div>
    </div>

    <div class="container">
        @if (!Model.IsAuthenticated)
        {
            <div class="achievements-card">
                <h2>üîí Authentication Required</h2>
                <p>Please <a href="/login" style="color: #c084fc;">log in</a> to view your achievements.</p>
            </div>
        }
        else
        {
            <div class="achievements-card">
                <h2>Your Achievements</h2>
                <p>Track your learning milestones and unlock badges as you progress through courses.</p>
            </div>

            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px; margin-top: 20px;">
                @foreach (var achievement in Model.Achievements)
                {
                    <div class="achievements-card" style="@(achievement.IsUnlocked ? "border-color: rgba(138, 43, 226, 0.6);" : "opacity: 0.6;")">
                        <div style="text-align: center; font-size: 3em; margin-bottom: 10px;">@achievement.Icon</div>
                        <h3 style="color: #c084fc; text-align: center; margin-bottom: 10px;">@achievement.Name</h3>
                        <p style="text-align: center; color: #c8b6ff; font-size: 0.9em;">@achievement.Description</p>
                        
                        @if (achievement.IsUnlocked)
                        {
                            <div style="text-align: center; margin-top: 15px; color: #22c55e; font-weight: 600;">
                                ‚úì Unlocked
                            </div>
                        }
                        else
                        {
                            <div style="margin-top: 15px;">
                                <div style="background: rgba(138, 43, 226, 0.2); height: 8px; border-radius: 4px; overflow: hidden;">
                                    <div style="background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%); height: 100%; width: @achievement.Progress%;"></div>
                                </div>
                                <p style="text-align: center; margin-top: 5px; color: #c8b6ff; font-size: 0.85em;">@achievement.Progress% Complete</p>
                            </div>
                        }
                    </div>
                }
            </div>

            @if (!Model.Achievements.Any(a => a.IsUnlocked))
            {
                <div class="achievements-card" style="margin-top: 20px; text-align: center;">
                    <h3 style="color: #c084fc;">üéØ Start Your Journey</h3>
                    <p>Complete courses and challenges to unlock these achievements!</p>
                    <a href="/cms/learning" class="btn-primary" style="margin-top: 15px; display: inline-block;">Browse Courses</a>
                </div>
            }
        }
    </div>
    <!-- ASHAT Os Session Manager -->
    <script src="/js/session-manager.js"></script>
</body>
</html>
