@page
@model ASHATCore.Pages.CMS.Forums.ModerateModel
@{
    ViewData["Title"] = "Forum Moderation Panel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a0033 50%, #2d004d 100%);
            min-height: 100vh;
            color: #e0d0ff;
        }
        .header {
            background: rgba(20, 0, 40, 0.9);
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
            padding: 20px;
            box-shadow: 0 4px 20px rgba(138, 43, 226, 0.3);
        }
        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        .header h1 {
            background: linear-gradient(to right, #ffffff, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.2em;
            text-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
        }
        .nav {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        .nav a {
            color: #c084fc;
            text-decoration: none;
            padding: 8px 16px;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 6px;
            transition: all 0.3s;
            font-weight: 600;
            font-size: 0.95em;
        }
        .nav a:hover {
            background: rgba(138, 43, 226, 0.4);
            border-color: rgba(138, 43, 226, 0.6);
            transform: translateY(-2px);
        }
        .container {
            max-width: 1400px;
            margin: 30px auto;
            padding: 0 20px;
        }
        .mod-panel {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(138, 43, 226, 0.4);
        }
        .mod-panel h2 {
            color: #c084fc;
            font-size: 1.8em;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid rgba(138, 43, 226, 0.3);
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: rgba(138, 43, 226, 0.1);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s;
        }
        .stat-card:hover {
            border-color: rgba(138, 43, 226, 0.6);
            transform: translateY(-3px);
        }
        .stat-card .number {
            font-size: 2.5em;
            color: #c084fc;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .stat-card .label {
            color: #d8c8ff;
            font-size: 1em;
        }
        .action-buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 30px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background: linear-gradient(135deg, #8b2fc7 0%, #6a1b9a 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 600;
            border: 2px solid rgba(138, 43, 226, 0.5);
            cursor: pointer;
            font-size: 0.95em;
        }
        .btn:hover {
            background: linear-gradient(135deg, #a13dd6 0%, #7d22ab 100%);
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.6);
            transform: translateY(-2px);
        }
        .btn-danger {
            background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
        }
        .btn-danger:hover {
            background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
        }
        .btn-warning {
            background: linear-gradient(135deg, #f57c00 0%, #e65100 100%);
        }
        .btn-warning:hover {
            background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
        }
        .mod-section {
            background: rgba(138, 43, 226, 0.05);
            border: 1px solid rgba(138, 43, 226, 0.2);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .mod-section h3 {
            color: #c084fc;
            font-size: 1.4em;
            margin-bottom: 15px;
        }
        .mod-list {
            display: grid;
            gap: 15px;
        }
        .mod-item {
            background: rgba(20, 0, 40, 0.9);
            border: 2px solid rgba(138, 43, 226, 0.3);
            border-radius: 8px;
            padding: 20px;
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 20px;
            align-items: center;
            transition: all 0.3s;
        }
        .mod-item:hover {
            border-color: rgba(138, 43, 226, 0.6);
        }
        .mod-item-info {
            flex: 1;
        }
        .mod-item-info h4 {
            color: #e0d0ff;
            font-size: 1.2em;
            margin-bottom: 8px;
        }
        .mod-item-meta {
            color: #b8a8d8;
            font-size: 0.9em;
            margin-bottom: 5px;
        }
        .mod-item-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        .small-btn {
            padding: 6px 12px;
            font-size: 0.85em;
            background: rgba(138, 43, 226, 0.2);
            border: 1px solid rgba(138, 43, 226, 0.4);
            border-radius: 6px;
            color: #c084fc;
            text-decoration: none;
            transition: all 0.3s;
            cursor: pointer;
        }
        .small-btn:hover {
            background: rgba(138, 43, 226, 0.4);
            transform: translateY(-1px);
        }
        .tag {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 5px;
            font-size: 0.8em;
            font-weight: 600;
            margin-right: 8px;
        }
        .tag-flagged {
            background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
            color: white;
        }
        .tag-deleted {
            background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
            color: white;
        }
        .tag-locked {
            background: linear-gradient(135deg, #757575 0%, #616161 100%);
            color: white;
        }
        .tag-banned {
            background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
            color: white;
        }
        .footer {
            background: rgba(20, 0, 40, 0.9);
            border-top: 2px solid rgba(138, 43, 226, 0.3);
            padding: 20px;
            text-align: center;
            margin-top: 40px;
        }
        .footer p {
            color: #b8a8d8;
            font-size: 0.9em;
        }
        @@media (max-width: 768px) {
            .mod-item {
                grid-template-columns: 1fr;
            }
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <h1>üõ°Ô∏è Moderation Panel</h1>
            <div class="nav">
                <a href="/">üè† Home</a>
                <a href="/cms/forums">üìã Forum Index</a>
                <a href="/control-panel">‚öôÔ∏è Control Panel</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="mod-panel">
            <h2>Forum Statistics</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="number">@Model.TotalThreads</div>
                    <div class="label">Total Threads</div>
                </div>
                <div class="stat-card">
                    <div class="number">@Model.TotalPosts</div>
                    <div class="label">Total Posts</div>
                </div>
                <div class="stat-card">
                    <div class="number">@Model.DeletedPostsCount</div>
                    <div class="label">Deleted Posts</div>
                </div>
                <div class="stat-card">
                    <div class="number">@Model.LockedThreadsCount</div>
                    <div class="label">Locked Threads</div>
                </div>
                <div class="stat-card">
                    <div class="number">@Model.BannedUsers</div>
                    <div class="label">Banned Users</div>
                </div>
                <div class="stat-card">
                    <div class="number">@Model.ActiveWarnings</div>
                    <div class="label">Active Warnings</div>
                </div>
            </div>

            <div class="action-buttons">
                <button class="btn">üìä View Reports</button>
                <button class="btn btn-warning">‚ö†Ô∏è Manage Warnings</button>
                <button class="btn btn-danger">üö´ Ban Management</button>
            </div>
        </div>

        <div class="mod-section">
            <h3>üö© Flagged Posts</h3>
            <div class="mod-list">
                @foreach (var post in Model.FlaggedPosts)
                {
                    <div class="mod-item">
                        <div class="mod-item-info">
                            <h4>
                                <span class="tag tag-flagged">FLAGGED</span>
                                @post.Title
                            </h4>
                            <div class="mod-item-meta">
                                Posted by <strong>@post.Author</strong> ‚Ä¢ @post.Date.ToString("MMM dd, yyyy")
                            </div>
                            <div class="mod-item-meta">
                                Reason: @post.FlagReason
                            </div>
                        </div>
                        <div class="mod-item-actions">
                            <button class="small-btn">‚úì Approve</button>
                            <button class="small-btn">üóëÔ∏è Delete</button>
                            <button class="small-btn">‚ö†Ô∏è Warn User</button>
                            <a href="/cms/forums/thread?id=@post.ThreadId" class="small-btn">üëÅÔ∏è View</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mod-section">
            <h3>üîí Recently Locked Threads</h3>
            <div class="mod-list">
                @foreach (var thread in Model.LockedThreadsList)
                {
                    <div class="mod-item">
                        <div class="mod-item-info">
                            <h4>
                                <span class="tag tag-locked">LOCKED</span>
                                @thread.Title
                            </h4>
                            <div class="mod-item-meta">
                                Started by <strong>@thread.Author</strong> ‚Ä¢ Locked by <strong>@thread.LockedBy</strong>
                            </div>
                            <div class="mod-item-meta">
                                Reason: @thread.LockReason
                            </div>
                        </div>
                        <div class="mod-item-actions">
                            <button class="small-btn">üîì Unlock</button>
                            <a href="/cms/forums/thread?id=@thread.Id" class="small-btn">üëÅÔ∏è View</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mod-section">
            <h3>üö´ Recently Banned Users</h3>
            <div class="mod-list">
                @foreach (var ban in Model.BannedUsersList)
                {
                    <div class="mod-item">
                        <div class="mod-item-info">
                            <h4>
                                <span class="tag tag-banned">BANNED</span>
                                @ban.Username
                            </h4>
                            <div class="mod-item-meta">
                                Banned by <strong>@ban.BannedBy</strong> on @ban.BanDate.ToString("MMM dd, yyyy")
                            </div>
                            <div class="mod-item-meta">
                                Reason: @ban.Reason
                            </div>
                        </div>
                        <div class="mod-item-actions">
                            <button class="small-btn btn-warning">‚úì Unban</button>
                            <button class="small-btn">üëÅÔ∏è View Profile</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mod-section">
            <h3>üóëÔ∏è Recently Deleted Posts</h3>
            <div class="mod-list">
                @foreach (var post in Model.DeletedPostsList)
                {
                    <div class="mod-item">
                        <div class="mod-item-info">
                            <h4>
                                <span class="tag tag-deleted">DELETED</span>
                                @post.Title
                            </h4>
                            <div class="mod-item-meta">
                                Posted by <strong>@post.Author</strong> ‚Ä¢ Deleted by <strong>@post.DeletedBy</strong>
                            </div>
                            <div class="mod-item-meta">
                                Reason: @post.DeleteReason
                            </div>
                        </div>
                        <div class="mod-item-actions">
                            <button class="small-btn">‚ôªÔ∏è Restore</button>
                            <button class="small-btn">üëÅÔ∏è View Details</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="footer">
        <p>AGP Studios, INC - Forum Moderation Panel ¬© 2024 ‚Ä¢ Powered by ASHAT Os with LegendaryCMS</p>
    </div>
    <!-- ASHAT Os Session Manager -->
    <script src="/js/session-manager.js"></script>
</body>
</html>
